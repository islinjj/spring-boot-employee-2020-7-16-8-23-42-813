pipeline {
    
    agent any

    environment {
        JENKINS_NODE_COOKIE = "donotkillme"
    }

    stages {
        stage('Build') { 
            steps {
                bat "cd ../"
                bat "xcopy spring-boot-test d:\\deploy\\spring-boot-test"
                bat "cd d:\\deploy\\spring-boot-test"
                bat 'gradle clean build -x test' 
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy'
                bat "run.bat"
            }
        }
    }
}