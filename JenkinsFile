pipeline {
    
    agent any

    environment {
        JENKINS_NODE_COOKIE = "donotkillme"
    }

    stages {
        stage('test') {
            steps {
                echo 'test'
                bat 'gradle test'
            }
        }
        stage('Build') { 
            steps {
                bat 'gradle clean build' 
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy'
                bat "copy build\\libs\\*.jar d:\\deploy\\backend-test"
                bat "run.bat"
            }
        }
    }
}